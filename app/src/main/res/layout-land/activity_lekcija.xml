<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.ucko.romb.ucko.Lekcija">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/tr1"
        android:layout_weight=".2"
        android:paddingTop="10dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:id="@+id/tr11">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/naziv_lekcije"
                android:textColor="#FFF"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:id="@+id/textView1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/tr12">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/editText1"
                android:background="#F6FF7A" >
                <requestFocus/>
            </EditText>

        </TableRow>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tr2"
        android:layout_weight="2"
        android:layout_marginTop="10dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.ucko.romb.ucko.Lista"
            android:id="@+id/fragment"
            android:layout_gravity="center_vertical"
            tools:layout="@layout/list_fragment" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tr3"
        android:layout_weight=".2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tr31"
            android:layout_marginRight="30dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dodaj_pitanje"
                android:textSize="30sp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnDodajPitanje"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tr32"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sacuvaj_lekciju"
                android:textSize="30sp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnSacuvaj" />
        </TableRow>
    </TableRow>


</LinearLayout>
