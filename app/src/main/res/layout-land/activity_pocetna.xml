<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#000000"
tools:context=".Pocetna" >

<TableRow
    android:id="@+id/tr1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <TableRow
        android:id="@+id/tr11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

    <TableRow
        android:id="@+id/tr12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnRadiLekcije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radi_lekcije"
            android:background="@drawable/oblik_dugmeta"
            android:layout_margin= "8dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tr13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

</TableRow>

<TableRow
    android:id="@+id/tr2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <TableRow
        android:id="@+id/tr21"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

    <TableRow
        android:id="@+id/tr22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnUpravljanjeSadrzajem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upravljanje_sadrzajem"
            android:background="@drawable/oblik_dugmeta"
            android:layout_margin="8dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tr23"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

</TableRow>

<TableRow
    android:id="@+id/tr3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <TableRow
        android:id="@+id/tr31"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

    <TableRow
        android:id="@+id/tr32"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnOpcije"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opcije"
            android:background="@drawable/oblik_dugmeta"
            android:layout_margin="8dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tr33"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

</TableRow>

<TableRow
    android:id="@+id/tr4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <TableRow
        android:id="@+id/tr41"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

    <TableRow
        android:id="@+id/tr42"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnIzlaz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/izlaz"
            android:background="@drawable/oblik_dugmeta"
            android:layout_margin="8dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tr43"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </TableRow>

</TableRow>

</LinearLayout>

