<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ucko.romb.ucko.Podesavanja"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" >
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/zvuk_za_tacan"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snimi"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnSnimiTacan"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="49dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preslusaj"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnSlusajTacan"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/osnovni"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnVratiNaPodrazumevaniTacni"/>

        </TableRow>



    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" >
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/zvuk_za_netacan"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snimi"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnSnimiNetacni"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preslusaj"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnSlusajNetacni"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/osnovni"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnVratiNaPodrazumevanNetacni"/>

        </TableRow>



    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/promena_slova"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:id="@+id/textView11"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PISMO"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnOdaberiSlova"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="103dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/boja_pozadina"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:id="@+id/textView9"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odaberi"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnOdaberiBojuPozadine"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/boja_teksta"
                android:textSize="30sp"
                android:textColor="#FFF"
                android:id="@+id/textView10"
                android:layout_gravity="center_vertical"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odaberi"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnOdaberiBojuTeksta"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >
        </TableRow>

    </TableRow>

</LinearLayout>
