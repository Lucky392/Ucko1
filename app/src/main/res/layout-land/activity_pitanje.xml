<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.ucko.romb.ucko.Pitanje">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/tr1"
        android:layout_weight=".1"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/pitanje"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:textSize="40sp"
            android:id="@+id/textView1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/etPitanje"
            android:layout_weight="3"
            android:background="#F6FF7A" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/tr4"
        android:layout_weight=".09"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dodaj_zvuk"
            android:textColor="#FFF"
            android:gravity="center"
            android:textSize="40sp"
            android:paddingRight="15dp"
            android:id="@+id/tv1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/snimi"
            android:textSize="30sp"
            android:layout_marginRight="15dp"
            android:background="@drawable/oblik_dugmeta"
            android:id="@+id/btnSnimiPitanje"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/preslusaj"
            android:textSize="30sp"
            android:layout_marginRight="15dp"
            android:background="@drawable/oblik_dugmeta"
            android:id="@+id/btnSlusajPitanje"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/odaberi_tacan"
            android:textColor="#FFF"
            android:textSize="40sp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:id="@+id/tv4" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tacan_odgovor"
            android:background="#F6FF7A"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tr2"
        android:layout_weight=".61"
        android:layout_marginTop="15dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.ucko.romb.ucko.Lista"
            android:id="@+id/fragment"
            android:layout_gravity="center_vertical"
            tools:layout="@layout/list_fragment" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tr3"
        android:layout_weight=".1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tr31"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dodaj_odgovor"
                android:textSize="30sp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnDodajOdgovor"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tr32"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sacuvaj_lekciju"
                android:textSize="30sp"
                android:background="@drawable/oblik_dugmeta"
                android:id="@+id/btnSacuvajPitanje"/>
        </TableRow>
    </TableRow>


</LinearLayout>
