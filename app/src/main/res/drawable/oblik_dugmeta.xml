<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#00ff00" />


            <stroke android:width="1dp" android:color="#878787" />

            <corners android:radius="18dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="18dp" />

            <gradient android:angle="45" android:centerColor="#ECFF3D" android:centerX="50%" android:endColor="#FFFF00" android:startColor="#F6FF7A" android:type="linear" />


            <stroke android:width="1dp" android:color="#878787" />
        </shape></item>

</selector>